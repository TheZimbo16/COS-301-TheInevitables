<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="theinevitables.navup.disability_menu"
    tools:showIn="@layout/activity_disability_menu">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button17"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/navupmainmenu" />

    <Button
        android:id="@+id/button17"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:drawableRight="@android:drawable/ic_menu_mapmode"
        android:elevation="0dp"
        android:onClick="goToMap"
        android:padding="16dp"
        android:text="Map"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_above="@+id/button22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button22"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:drawableRight="@android:drawable/ic_menu_camera"
        android:elevation="0dp"
        android:onClick="goToPOI"
        android:padding="16dp"
        android:text="Points of Interest"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_above="@+id/button11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:drawableRight="@android:drawable/ic_menu_save"
        android:elevation="0dp"
        android:onClick="goToLoginPage"
        android:padding="16dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_above="@+id/button25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button25"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawableRight="@android:drawable/ic_menu_add"
        android:elevation="0dp"
        android:onClick="goToRegistration"
        android:padding="16dp"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
