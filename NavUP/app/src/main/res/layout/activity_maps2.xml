        <requestFocus/>
    </AutoCompleteTextView>-->


    <AutoCompleteTextView
        android:id="@+id/endLoc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:hint="Enter Destination"
        android:radius="8dp"
        android:textColor="@android:color/black"
        android:layout_alignRight="@+id/start_tracking"
        android:layout_alignEnd="@+id/start_tracking"></AutoCompleteTextView>

    <Button
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/endLoc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:onClick="sendPost"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/start_tracking"
        android:layout_alignStart="@+id/start_tracking" />


    <Button
        android:id="@+id/start_tracking"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@android:drawable/ic_menu_compass"
        android:gravity="center"
        android:onClick="getCurrentLocation"
        android:padding="16dp"
        android:textColor="@color/colorIcons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


   </RelativeLayout>

