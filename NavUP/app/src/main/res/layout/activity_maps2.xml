<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="theinevitables.navup.MapsActivity"
    >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <EditText
        android:id="@+id/startLoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="Enter Start Point"
        android:textColor="@android:color/black"
        android:background="@android:color/white" >
    </EditText>
    <EditText
        android:id="@+id/endLoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:hint="Enter Destination"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:layout_below="@+id/startLoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </EditText>

    <Button
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:onClick="sendPost"
        android:text="Navigate"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:drawableRight="@android:drawable/ic_menu_mapmode"
        android:textColor="@color/colorPrimary" />


    <Button
        android:id="@+id/start_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:drawableRight="@android:drawable/ic_menu_compass"
        android:gravity="center"
        android:onClick="getCurrentLocation"
        android:padding="16dp"
        android:text="Start tracking"
        android:textColor="@color/colorIcons" />


   </RelativeLayout>

